{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Table",
  "description": "",
  "type": "object",
  "tag": "pfe-table",
  "class": "PfeTable",
  "category": "content",
  "properties": {
    "slots": {
      "title": "Slots",
      "description": "Definition of the supported slots",
      "type": "object",
      "properties": {
        "default": {
          "title": "Default slot",
          "type": "array",
          "namedSlot": false,
          "items": {
            "oneOf": [
              {
                "$ref": "raw"
              }
            ]
          }
        }
      },
      "required": ["default"]
    },
    "attributes": {
      "title": "Attributes",
      "type": "object",
      "properties": {
        "row-border": {
          "title": "Row borders",
          "type": "string",
          "prefixed": false,
          "enum": ["none"]
        }
      }
    },
    "events": {
      "title": "Events",
      "description": "Definition of the supported events",
      "type": "object",
      "properties": {}
    }
  },
  "required": ["slots", "attributes", "events"],
  "additionalProperties": false
}
